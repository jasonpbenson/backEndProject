<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>emOceans-create</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include headerLinks %>
    <style>
    
    .moodCircleData{
        width: 15rem;
        height: 15rem;
        border-radius: 50%;
        margin: 1rem;
    }
    </style>

    

</head>

<body>
    <% include navbar %>
    <div class="body-background">
        <div class="title">MOODBOARDS</div>
        <div class="outerWrapper">    
            <div class="boardWrapper">
                <div class="moodBoardButtonContainer">
                    <button class="boardButton viewDay">Day</button>
                    <button class="boardButton viewWeek">Week</button>
                    <button class="boardButton viewMonth">Month</button>
                    <button class="boardButton viewYear">Year</button>
                </div>
                <div class="boardDisplay">
                    
                
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/1.3.4/chroma.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/locale/en-us.js"></script> -->

    <script>
        $(document).ready(() => {
            const moodDataz = <%- JSON.stringify(results) %>
                for (let i = 0; i < moodDataz.length; i++) {
                let moodCircle = document.createElement('div');
                moodCircle.classList.add('moodCircleData')
                moodCircle.style.backgroundColor = moodDataz[i].color 
                let currentDay = moment(moodDataz[i].date)
                let sunday = currentDay.day(0)
                moodCircle.textContent = sunday.format('MMMM Do YYYY')
                document.querySelector('.boardDisplay').appendChild(moodCircle)
            }
        })
    </script>

</body>

</html>