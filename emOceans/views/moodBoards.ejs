<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>emOceans-create</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include headerLinks %>
    <style>
    
    .circle{
        width: 15rem;
        height: 15rem;
        border-radius: 50%;
        background: red;
        margin: 1rem;
    }

    </style>

</head>

<body>
    <% include navbar %>
    <div class="body-background">
        <div class="title">MOODBOARDS</div>
        <div class="outerWrapper">    
            <div class="boardWrapper">
                <div class="moodBoardButtonContainer">
                    <button class="boardButton viewDay">Day</button>
                    <button class="boardButton viewWeek">Week</button>
                    <button class="boardButton viewMonth">Month</button>
                    <button class="boardButton viewYear">Year</button>
                </div>
                <div class="boardDisplay">
                    <div class='circles'></div>
                <% for (let i =0; i < results.length; i++) { %>
                        <div class='circle'>
                            <%= results[i].color %>
                            <%= results[i].mood %>
                            <%= results[i].note %>
                            <%= results[i].date %>
                        </div>
                <% } %>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/1.3.4/chroma.min.js"></script>
    <script src="/javascripts/varDec.js"></script>
    <script src="/javascripts/datamuse.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/colorWords.js"></script>
</body>

</html>